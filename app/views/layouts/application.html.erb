<!DOCTYPE html>
<html>
<head>
  <title>Videoquest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="site_nav">
		<%= link_to "Видео", videos_path %>
		<%= link_to 'Новое видео', new_video_path %>
	</div>
	<div id="user_nav">
		<% if current_user %>
			<%= current_user.email %>
			<%= link_to "Выйти", log_out_path %>		
		<% else %>
			<%= link_to "Войти", log_in_path %> или
			<%= link_to "Зарегистрироваться", sign_up_path %>		
		<% end %>
	</div>
	
	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
	<%= yield %>

</body>
</html>
